;; Widget, that shows date ;;

(defpoll date :interval "1s" 'date +"%a - %b %d"')

(defwidget date []
        (box :class "module module-active"
             :space-evenly false
             :spacing 10
             (label :class "icon-small"
		    :text "\\ue92f")
             (label :class "fs-16px fw-b"
                    :text date)))

